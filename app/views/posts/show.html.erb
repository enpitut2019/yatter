<%= render 'layouts/header'%>
<div id="show">
  <%= link_to "+", posts_new_path, class: "post" %>
  <%= link_to "自分の投稿を見る", posts_index_path, class: 'button' %>


  <p class="success">
    <%= flash[:success] %>
  </p>


  <h1 class="content"><%= @post.content %></h1>


  <%= link_to "next post", reactions_create_path(emotion: 0, post_id: @post.id), class: 'button' %>
  <%= link_to "いいね!", reactions_create_path(emotion: 1, post_id: @post.id), class: 'button'%>
</div>