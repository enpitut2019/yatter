<div class="users-new">
  <h1 class="users-new__title">会員登録</h1>

  <%= form_for @user, url: users_create_path do |f| %>
    <div class="users-new__field">
      <%= f.label :name, "ニックネーム", class: "label" %>
      <%= f.text_field :name, class: "input" %>
    </div>

    <div class="users-new__field">
      <%= f.label :email, "メールアドレス", class: "label" %>
      <%= f.email_field :email, class: "input" %>
    </div>

    <div class="users-new__field">
      <%= f.label :password, "パスワード", class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </div>

    <div class="users-new__field">
      <%= f.label :password_confirmation, "パスワード(確認)", class: "label" %>
      <%= f.password_field :password_confirmation, class: "input" %>
    </div>

    <div class="users-new__field center">
      <%= f.submit '新規登録', class: "users-new__submit" %>
    </div>

  <% end %>

</div>