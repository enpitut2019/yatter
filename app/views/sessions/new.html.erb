<div class="danger">
  <%= flash[:fail] %>
</div>

<%= form_for :session, method: :post, url: sessions_create_path do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit 'ログイン' %>

<% end %>

<div>
  <%= link_to "ユーザ登録", users_new_path %>
</div>
